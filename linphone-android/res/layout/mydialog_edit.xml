<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mTvContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/font_gray"
        android:textSize="@dimen/text_size_18" />

    <EditText
        android:id="@+id/mEtContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:minHeight="32dp"
        android:padding="10dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFE4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/background_gray_light"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mButton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_dialog_button"
            android:text="确定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:id="@+id/mBtnLine"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#FFE4E4E4" />

        <Button
            android:id="@+id/mButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:background="@drawable/my_dialog_button"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>