<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_bottom"
    android:paddingLeft="@dimen/padding_left"
    android:paddingTop="@dimen/padding_top" >

    <FrameLayout
        android:id="@+id/mLayoutIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/mIconUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_menu_userbg" />

        <ImageView
            android:id="@+id/mDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_outgoing" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimens_margin_5"
        android:layout_marginRight="@dimen/dimens_margin_12"
        android:layout_toLeftOf="@+id/statusLayout"
        android:layout_toRightOf="@+id/mLayoutIcon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/mTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_margin_12"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mIconPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_margin_20"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_main_phone" />

        <ImageView
            android:id="@+id/mIconVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_margin_20"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_main_video" />
    </LinearLayout>

</RelativeLayout>